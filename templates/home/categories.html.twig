{% extends 'base.html.twig' %}
{% block body %}
<style>
    #categories .card{
        height:280px;
    }
</style>
<div id="categories" class="project1">
    <div class="thenav">
        {% include "common/nav.html.twig" %}
    </div>
    <div class="content">
        <div class="container pt-3">
            <div class="row">
                {% for one in allcategories %}
                    <div class="col-6 col-md-4 col-lg-3 mb-3">
                        <div class="card" style="width: 90%;">
                            <div class="cardimg">
                                <a href="{{ path('onecategorypage',{'id':one.id}) }}">
                                    <img src="{{ asset('photos/' ~ one.photo) }}" class="card-img-top" alt="...">
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title mb-5">{{one.name}}</h5>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
    </div>
</div>
{% endblock %}
