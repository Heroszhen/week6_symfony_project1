{% extends 'base.html.twig' %}
{% block body %}
<div id="onecategory" class="project1">
    <div class="thenav">
        {% include "common/nav.html.twig" %}
    </div>
    <div class="content">
        <div class="container pt-3">
            <div class="row">
                <h2 class="col-12 mb-3">Cat√©gorie : {{ category.name }}</h2>
                {% for one in products %}
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="card" style="width: 90%;">
                            <div class="cardimg">
                                <img src="{{ asset('photos/' ~ one.photo) }}" class="card-img-top" alt="...">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">{{one.name}}</h5>
                                <div>{{one.price}} euros</div>
                                <a href="{{ path('oneproductpage',{'id':one.id}) }}" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
    </div>
</div>
{% endblock %}
