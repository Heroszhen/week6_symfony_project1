{% extends 'base.html.twig' %}
{% block body %}
<div id="contact" class="project1">
    <div class="thenav">
        {% include "common/nav.html.twig" %}
    </div>
    <div class="content">
        <div class="container pt-5">
            <div class="row justify-content-center">
                <h2 class="col-12 mb-3">Blog</h2>
                {% for one in allarticles %}
                <div class="col-md-7 mb-4">
                    <div class="row">
                        <div class="col-3" style="height:100px;overflow:hidden">
                            <img src="{{ asset('photos/' ~ one.photo) }}" class="card-img-top" alt="...">
                        </div>
                        <div class="col-9">
                            <h5>
                                <a href="{{ path('onearticlepage',{'id':one.id}) }}">{{ one.title }}</a>
                            </h5>
                            <small>
                                {{ one.created|date("d/m/Y h:i:s") }}
                            </small>
                        </div>
                    </div>
                    
                </div>
                {% endfor %}
            </div>
        </div>
        
    </div>
</div>
{% endblock %}