{% extends 'base.html.twig' %}
{% block body %}
<div id="contact" class="project1">
    <div class="thenav">
        {% include "common/nav.html.twig" %}
    </div>
    <div class="content">
        <div class="container pt-5">
            <div class="row justify-content-center">
                <h2 class="col-12 text-center mb-3">Contactez-nous</h2>
                <div class="col-md-6 h1">
                    {{ company.text1|raw }}
                </div>
                <div class="col-md-6">
                {{form_start(form)}}
                {{form_row(form.civility)}}
                {{form_row(form.name)}}
                {{form_row(form.email)}}
                {{form_row(form.message)}}
                <button type="submit" class="btn btn-primary">Envoyer</button>
                {{form_end(form)}}
                </div>
            </div>
        </div>
        <div class="mt-3">
            {{ company.map|raw }}
        </div>
    </div>
</div>
{% endblock %}