{% extends 'base.html.twig' %}

{% block body %}
<div id="adminmodifyonearticle" class="admin">
    <div class="theadminnav">
        {% include 'admin/adminnav.html.twig' %}
    </div>
    <div class="theadmincontent">
        <div class="container-fluid pt-5">
            <h2 class="text-center mb-5">Modifier l'article : {{ article.title }}</h2>
            <div class="row justify-content-center">
                <div class="col-md-7">
                    {{ form_start(form) }}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {{ form_row(form.title) }}
                    {{ form_row(form.content) }}
                    {{ form_row(form.photo) }}
                    <div class="showimagefile mb-1">
                        <img src="" alt="">
                    </div>
                        
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                    {{ form_end(form) }}
                </div>
                <div class="col-md-5">
                    <img src="{{ asset('photos/' ~ article.photo) }}" class="card-img-top" alt="...">
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{%  block javascripts  %}
    {{ parent() }}
    <script src="{{ asset('js/ckeditorbasic/adapters/jquery.js') }}"></script>
    <script src="{{ asset('js/ckeditorbasic/ckeditor.js') }}"></script>
    <script>
        $(function() {
            $('textarea.ckeditor').ckeditor();
        });
    </script>
{% endblock %}